<div class="container" style="margin-top: 100px;">
    <div class="row">
        <h2 class="agregarh1">Modificar producto {{modificar.producto}} con ID {{modificar.id}}</h2>
    </div>
    <div class="col">
        <form action="/admin/administrador/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{modificar.id}}" />

            <div class="row-3">
                <div class="form-group" style="margin-bottom: 10px;">
                    <label for="">Descripcion de Producto</label>
                    <input class="form-control" type="text" name="producto" value="{{modificar.producto}}" />
                </div>
                <div class="row">
                    <div class="form-group">
                        <label for="">Cantidad</label>
                        <input class="form-control" type="number" name="cantidad" value="{{modificar.cantidad}}" />
                    </div>
                    <div class="form-group">
                        <label for="">Precio</label>
                        <input class="form-control" type="number" name="precio" value="{{modificar.precio}}" />
                    </div>
                </div>
                <div class="mb-3 row" style="margin-top: 10px;">
                    <label>
                        <input type="file" class="form-control" name="imagen" id="imagen" />
                    </label>
                </div>
                <div class="mb-3 row" style="margin-top: 10px;">
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Â¿Desea eliminar la
                        imagen?</label>
                    <input type="hidden" name="img_original" value="{{modificar.img_id}}">
                </div>

            </div>
            <button type="submit" class="btn btn-primary" style="margin: 10px 200px;">Modificar</button>

        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
    </div>
</div>