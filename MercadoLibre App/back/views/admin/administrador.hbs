<div class="container2">
  <div class="bienvenido">
    <p>Bienvenido/a {{nombre}}
      <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesion</a>
  </div>
</div>
<div class="container" style="margin-top: 20px;">
  <div class="row">
    <div class="col-7">
      <h3>Listado de Productos</h3>

    </div>
    <div class="col-5" style="text-align: end;">
      <a class="btn btn-success" href="/admin/administrador/agregar"><i class="fa fa-plus" aria-hidden="true"></i>
        Nuevo</a>

    </div>
    <table class="table">
      <thead class="table-primary" style="text-align: center;">
        <tr>
          <th>#</th>
          <th>Producto</th>
          <th>Stock</th>
          <th>Precio</th>
          <th>Imagen</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each productos}}
        <tr style="text-align: center;">
          <th class="table-secondary">{{id}}</th>
          <td class="table-secondary">{{producto}}</td>
          <td class="table-secondary">{{cantidad}}</td>
          <td class="table-secondary">{{precio}}</td>
          <td class="table-secondary">{{{imagen}}}</td>
          <td class="table-secondary">
            <a href="/admin/administrador/modificar/{{id}}" class="btn btn-warning"><i
                class="bi bi-pencil-fill"></i></a>
            <a href="/admin/administrador/eliminar/{{id}}" class="btn btn-danger"><i class="bi bi-trash3"></i></a>

          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>


</div>